import Vue from 'vue'
import Vuex from 'vuex'

Vue.use(Vuex)

const store = new Vuex.Store({
	state: {
		isLogin: uni.getStorageSync('token') || false,
	},
	getters: {
	},
	mutations: {
		login(state) {
			state.isLogin = true
		},
		logout(state) {
			state.isLogin = false
			uni.removeStorageSync('token')
		}
	}
})

export default store
