<view class="container"><block wx:if="{{isLogin}}"><view><view class="space-container">{{"当前房间: "+currentRoomName}}</view><block wx:for="{{roomZones}}" wx:for-item="zone" wx:for-index="zoneIndex" wx:key="zoneId"><view class="zone-section-container"><view class="zone-section-title">{{zone.zoneName}}</view><uni-grid vue-id="{{'8dd740cc-1-'+zoneIndex}}" column="{{2}}" show-border="{{false}}" square="{{false}}" bind:__l="__l" vue-slots="{{['default']}}"><block wx:for="{{zone.devices}}" wx:for-item="device" wx:for-index="deviceIndex" wx:key="zoneDeviceId"><uni-grid-item vue-id="{{('8dd740cc-2-'+zoneIndex+'-'+deviceIndex)+','+('8dd740cc-1-'+zoneIndex)}}" bind:__l="__l" vue-slots="{{['default']}}"><view class="{{['zone-device-container',(deviceIndex%2==0)?'zone-device-margin':'']}}">{{device.deviceName}}</view></uni-grid-item></block></uni-grid></view></block></view></block><block wx:else><view class="login-container"><view>当前未登录</view><view data-event-opts="{{[['tap',[['loginButtonClick',['$event']]]]]}}" class="login-button" bindtap="__e">点我登录</view></view></block></view>