	margin-right: 190rpx;
}
.item-data-text {
	font-size: 48px;
	font-weight: bold;
}
.item-tip-text {
	color: rgba(255, 255, 255, 0.7);
	font-size: 12px;
}
.bottom-container {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.control-button-container {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-top: 32px;
	font-size: 9px;
	color: #FFFFFF;
	font-weight: bold;
}
.control-item {
	width: 48px;
	height: 48px;
	text-align: center;
	position: relative;
}
.control-item-image {
	width: 48px;
	height: 48px;
}
.control-item-text {
	position: absolute;
	top: 0;
	width: 48px;
	height: 48px;
	line-height: 48px;
}
.control-item:nth-of-type(2) {
	margin: 0 80rpx;
}
.control-item-selected {
	color: #4A4A4A;
}
.wind-button-container {
	margin-top: 24px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.wind-button {
	width: 48px;
	height: 48px;
}
.wind-button:nth-of-type(2) {
	margin: 0 80rpx;
}

